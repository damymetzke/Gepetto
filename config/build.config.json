{
    "cleanDirectories": [
        "./out",
        "./dev_out",
        "./documentation/build",
        "./distribution",
        "./intermediate"
    ],
    "consoleColors": {
        "warn": [
            "FG_BRIGHT_YELLOW"
        ],
        "error": [
            "FG_BRIGHT_RED"
        ],
        "file": [
            "FG_BRIGHT_CYAN",
            "UNDERLINE"
        ],
        "header": [
            "FG_BRIGHT_MAGENTA",
            "BOLD",
            "UNDERLINE"
        ]
    },
    "directoryMaps": {
        "custom": {
            "html": [
                {
                    "from": "./html",
                    "to": "./out"
                }
            ],
            "core": [
                {
                    "from": "./src/core",
                    "to": "./src/front/core"
                },
                {
                    "from": "./src/core",
                    "to": "./src/back/core"
                }
            ],
            "coreTest": [
                {
                    "from": "./src/core",
                    "to": "./src/test/core"
                }
            ]
        },
        "sass": [
            {
                "from": "./style",
                "to": "./out/style",
                "test": "^[a-zA-Z][^]*\\.scss$",
                "ignoreRelative": true
            }
        ],
        "markdown": [
            {
                "from": "./documentation/md",
                "to": "./documentation/build/md",
                "test": "\\.md$"
            }
        ],
        "typedoc": {
            "to": "./documentation/build/typedoc-output"
        }
    }
}