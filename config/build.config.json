{
    "cleanDirectories": [
        "./out",
        "./dev_out",
        "./documentation/build"
    ],
    "consoleColors": {
        "warn": [
            "FG_BRIGHT_YELLOW"
        ],
        "error": [
            "FG_BRIGHT_RED"
        ],
        "file": [
            "FG_BRIGHT_CYAN",
            "UNDERLINE"
        ],
        "header": [
            "FG_BRIGHT_MAGENTA",
            "BOLD",
            "UNDERLINE"
        ]
    },
    "directoryMaps": {
        "custom": {
            "html": [
                {
                    "from": "./html",
                    "to": "./out"
                }
            ],
            "core": [
                {
                    "from": "./src/core",
                    "to": "./src/front/core"
                },
                {
                    "from": "./src/core",
                    "to": "./src/front/core"
                }
            ],
            "coreTest": [
                {
                    "from": "./src/core",
                    "to": "./src/test/core"
                }
            ]
        },
        "sass": [
            {
                "from": "./style",
                "to": "./out/style",
                "test": "^[a-zA-Z][^]*\\.scss$",
                "ignoreRelative": true
            }
        ],
        "typescript": {
            "front": {
                "from": "./src/front",
                "to": "./out/src/front",
                "config": "./config/front.tsconfig.json"
            },
            "back": {
                "from": "./src/back",
                "to": "./out/src/back",
                "config": "./config/back.tsconfig.json"
            },
            "test": {
                "from": "./src/test",
                "to": "./dev_out/test",
                "config": "./config/test.tsconfig.json"
            }
        }
    }
}