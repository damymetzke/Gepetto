{
  "name": "gepetto",
  "version": "1.0.0",
  "description": "gepetto - SVG animation tool",
  "main": "./out/src/back/main.js",
  "scripts": {
    "prestart": "npm run compile:app",
    "start": "electron .",
    "pretest": "npm run compile:test",
    "test": "jest",
    "setup:app": "node ./node_scripts/move-files.js *core",
    "setup:test": "node ./node_scripts/move-files.js *coreTest",
    "compile": "node ./node_scripts/run-scripts.js compile:app compile:test",
    "precompile:app": "npm run setup:app",
    "compile:app": "node ./node_scripts/run-scripts.js compile:app#html compile:app#sass compile:app#typescript.front compile:app#typescript.back",
    "compile:app#html": "node ./node_scripts/move-files.js *html",
    "compile:app#sass": "node ./node_scripts/compile-sass.js",
    "compile:app#typescript.front": "./node_modules/.bin/tsc -p ./config/front.tsconfig.json",
    "compile:app#typescript.back": "./node_modules/.bin/tsc -p ./config/back.tsconfig.json",
    "precompile:test": "npm run setup:test",
    "compile:test": "node ./node_scripts/run-scripts.js compile:test#typescript",
    "compile:test#typescript": "./node_modules/.bin/tsc -p ./config/test.tsconfig.json",
    "build": "node ./node_scripts/run-scripts.js compile then test then build:docs",
    "prebuild:docs": "node ./node_scripts/run-scripts.js setup:app setup:test",
    "build:docs": "node ./node_scripts/run-scripts.js build:docs#typedoc build:docs#markdown",
    "build:docs#typedoc": "node ./node_scripts/wrap_command.js \".\\node_modules\\.bin\\typedoc ./intermediate/typedoc_src/ --out {build_config:directoryMaps.typedoc.to} --tsconfig ./config/tsconfig.json --exclude ./src/front/core --exclude ./src/back/core --exclude ./src/test/core\"",
    "build:docs#markdown": "node ./node_scripts/build_markdown.js",
    "clean": "node ./node_scripts/clean.js",
    "prepack": "node ./node_scripts/run-scripts.js clean then compile:app compile:test then test",
    "pack": "./node_modules/.bin/electron-builder --dir",
    "predist": "node ./node_scripts/run-scripts.js clean then compile:app compile:test then test",
    "dist": "./node_modules/.bin/electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/damymetzke/Gepetto"
  },
  "author": "Damy Metzke",
  "license": "UNLICENCED",
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/types": "^7.9.6",
    "@types/jest": "^25.2.3",
    "del": "^5.1.0",
    "electron": "^8.2.4",
    "electron-builder": "^22.7.0",
    "jest": "^25.2.7",
    "jsdoc": "^3.6.3",
    "markdown": "^0.5.0",
    "marked": "^1.1.0",
    "npm-sass": "^2.3.0",
    "typedoc": "^0.17.7",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "node-sass": "^4.14.1",
    "xml2js": "^0.4.23"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "build": {
    "appId": "com.damymetzke.gepetto",
    "productName": "Gepetto",
    "copyright": "Copyright Â© 2020 Damy Metzke",
    "directories": {
      "buildResources": "./",
      "output": "./distribution"
    },
    "files": [
      "./out/**/*"
    ]
  }
}
